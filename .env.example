# ============================================================
# Cosilium-LLM Environment Variables
# ============================================================
#
# Copy this file to .env and fill in your API keys:
#   cp .env.example .env
#
# ============================================================

# ============================================================
# LLM API KEYS (Required for full functionality)
# ============================================================

# OpenAI (ChatGPT) - Required for ChatGPT agent
# Get your key: https://platform.openai.com/api-keys
# Pricing: https://openai.com/pricing
OPENAI_API_KEY=sk-...

# Anthropic (Claude) - Required for Claude agent & Synthesizer
# Get your key: https://console.anthropic.com/settings/keys
# Pricing: https://www.anthropic.com/pricing
ANTHROPIC_API_KEY=sk-ant-...

# Google AI (Gemini) - Required for Gemini agent
# Get your key: https://aistudio.google.com/app/apikey
# Pricing: https://ai.google.dev/pricing
GOOGLE_API_KEY=AIza...

# DeepSeek - Required for DeepSeek agent
# Get your key: https://platform.deepseek.com/api_keys
# Pricing: https://platform.deepseek.com/api-docs/pricing
DEEPSEEK_API_KEY=sk-...

# ============================================================
# MODEL SETTINGS
# ============================================================

# ChatGPT model (recommended: gpt-4o for best quality)
CHATGPT_MODEL=gpt-4o

# Claude model (recommended: claude-sonnet-4-20250514 for balance of speed/quality)
CLAUDE_MODEL=claude-sonnet-4-20250514

# Gemini model
GEMINI_MODEL=gemini-1.5-pro

# DeepSeek model
DEEPSEEK_MODEL=deepseek-chat

# ============================================================
# LLM PARAMETERS
# ============================================================

# Temperature: 0.0 = deterministic, 1.0 = creative
# Recommended: 0.3-0.5 for analysis tasks
TEMPERATURE=0.3

# Max tokens per response
MAX_TOKENS=4096

# ============================================================
# DATABASE (Supabase)
# ============================================================

# Supabase Project URL
# Find it: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://xxx.supabase.co

# Supabase API Key (anon/public key for client, service_role for server)
# Find it: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_KEY=eyJ...

# ============================================================
# REDIS (Optional - for caching)
# ============================================================

# Redis connection URL
# Local: redis://localhost:6379
# Cloud: redis://user:password@host:port
REDIS_URL=redis://localhost:6379

# ============================================================
# API SETTINGS
# ============================================================

# Host and port for FastAPI server
API_HOST=0.0.0.0
API_PORT=8000

# JWT secret for API authentication (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-secret-key-change-in-production

# ============================================================
# FEATURE FLAGS
# ============================================================

# Enable RAG (Retrieval Augmented Generation)
# Requires: Supabase with pgvector extension
ENABLE_RAG=false

# Enable thinking patterns search
# Requires: Supabase + OpenAI for embeddings
ENABLE_THINKING_PATTERNS=false

# Enable prompt evolution (self-improving prompts)
ENABLE_PROMPT_EVOLUTION=false

# Enable response caching
# Requires: Redis
ENABLE_CACHING=false

# ============================================================
# LANGSMITH MONITORING (Optional but recommended)
# ============================================================

# Enable LangSmith tracing
# Sign up: https://smith.langchain.com
LANGCHAIN_TRACING_V2=false

# LangSmith API key
LANGCHAIN_API_KEY=

# Project name in LangSmith
LANGCHAIN_PROJECT=cosilium-llm

# ============================================================
# MINIMAL SETUP (to get started quickly)
# ============================================================
#
# For minimal working setup, you only need:
# 1. OPENAI_API_KEY - for ChatGPT agent
# 2. ANTHROPIC_API_KEY - for Claude agent (synthesizer)
#
# This allows running basic analysis with 2 agents.
# Add GOOGLE_API_KEY and DEEPSEEK_API_KEY for full 4-agent analysis.
#
# ============================================================
